<div class="container" id="workout_index">

  <div class="page_title">
    <h2>All Workouts</h2>
  </div>

  <!-- Partial here? Latest benchmark, charted -->
  <!-- Filtering options or search here? -->
  <% @workouts.each do |workout| %>
    <div class="workout_specs item">
      <h4><%= workout.name%></h4>
      <!-- <ul> -->
        <span class='spec'><em><%= workout.description %></em></span>
        <span class='spec'>Type: <%= workout.intensity %></span>
        <span class='spec'>Training Band: <%= workout.training_band %></span>
      <!-- </ul> -->
      <%= link_to "Stats & Scores", workout_path(workout.id), class: 'button stats_and_scores'%>
    </div>
  <% end %>
  <!-- Create a coaches toolbar partial that appears at the bottom of the body or in the footer or at the side(?) if the person logging in is a coach. Move create/delete/edit workout options, view all rowers to that panel -->
  <div class="wide">
    <%= link_to "Create a New Workout", new_workout_path, class: 'button new'%>
  </div>
</div>
